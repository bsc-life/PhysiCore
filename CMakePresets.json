{
    "version": 6,
    "configurePresets": [
        {
            "name": "_root-config",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "_debug-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "_relwithdebinfo-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "_release-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "_gcc-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_C_FLAGS_DEBUG_INIT": "-Wall -Wextra -Wpedantic -fsanitize=address -fsanitize=leak -fsanitize=pointer-compare -fsanitize=pointer-subtract -fsanitize=undefined -fsanitize-undefined-trap-on-error",
                "CMAKE_CXX_FLAGS_DEBUG_INIT": "-Wall -Wextra -Wpedantic -fsanitize=address -fsanitize=leak -fsanitize=pointer-compare -fsanitize=pointer-subtract -fsanitize=undefined -fsanitize-undefined-trap-on-error",
                "CMAKE_C_FLAGS_RELWITHDEBINFO_INIT": "-Wall -Wextra -Wpedantic -fsanitize=thread",
                "CMAKE_CXX_FLAGS_RELWITHDEBINFO_INIT": "-Wall -Wextra -Wpedantic -fsanitize=thread",
                "CMAKE_C_FLAGS_RELEASE_INIT": "-Wall -Wextra -Wpedantic",
                "CMAKE_CXX_FLAGS_RELEASE_INIT": "-Wall -Wextra -Wpedantic"
            },
            "environment": {
                "TSAN_OPTIONS": "suppressions=${sourceDir}/tsan-suppressions.txt"
            }
        },
        {
            "name": "_llvm-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_FLAGS_DEBUG_INIT": "-Wall -Wextra -Wpedantic -fsanitize=address -fsanitize=leak -fsanitize=pointer-compare -fsanitize=pointer-subtract -fsanitize=undefined -fsanitize-undefined-trap-on-error",
                "CMAKE_CXX_FLAGS_DEBUG_INIT": "-Wall -Wextra -Wpedantic -fsanitize=address -fsanitize=leak -fsanitize=pointer-compare -fsanitize=pointer-subtract -fsanitize=undefined -fsanitize-undefined-trap-on-error",
                "CMAKE_C_FLAGS_RELWITHDEBINFO_INIT": "-Wall -Wextra -Wpedantic -fsanitize=thread",
                "CMAKE_CXX_FLAGS_RELWITHDEBINFO_INIT": "-Wall -Wextra -Wpedantic -fsanitize=thread",
                "CMAKE_C_FLAGS_RELEASE_INIT": "-Wall -Wextra -Wpedantic",
                "CMAKE_CXX_FLAGS_RELEASE_INIT": "-Wall -Wextra -Wpedantic"
            },
            "environment": {
                "TSAN_OPTIONS": "suppressions=${sourceDir}/tsan-suppressions.txt"
            }
        },
        {
            "name": "_appleclang-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cc",
                "CMAKE_CXX_COMPILER": "c++",
                "CMAKE_C_FLAGS_DEBUG_INIT": "-Wall -Wextra -Wpedantic -fsanitize=address -fsanitize=leak -fsanitize=pointer-compare -fsanitize=pointer-subtract -fsanitize=undefined",
                "CMAKE_CXX_FLAGS_DEBUG_INIT": "-Wall -Wextra -Wpedantic -fsanitize=address -fsanitize=leak -fsanitize=pointer-compare -fsanitize=pointer-subtract -fsanitize=undefined",
                "CMAKE_C_FLAGS_RELWITHDEBINFO_INIT": "-Wall -Wextra -Wpedantic -fsanitize=thread",
                "CMAKE_CXX_FLAGS_RELWITHDEBINFO_INIT": "-Wall -Wextra -Wpedantic -fsanitize=thread",
                "CMAKE_C_FLAGS_RELEASE_INIT": "-Wall -Wextra -Wpedantic",
                "CMAKE_CXX_FLAGS_RELEASE_INIT": "-Wall -Wextra -Wpedantic"
            },
            "environment": {
                "TSAN_OPTIONS": "suppressions=${sourceDir}/tsan-suppressions.txt"
            }
        },
        {
            "name": "_msvc-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_C_FLAGS_DEBUG_INIT": "/W4 /fsanitize=address /Zi",
                "CMAKE_CXX_FLAGS_DEBUG_INIT": "/W4 /fsanitize=address /Zi",
                "CMAKE_C_FLAGS_RELEASE_INIT": "/W4",
                "CMAKE_CXX_FLAGS_RELEASE_INIT": "/W4"
            }
        },
        {
            "name": "gcc-debug",
            "displayName": "GCC Debug Build",
            "inherits": [
                "_root-config",
                "_debug-base",
                "_gcc-base"
            ]
        },
        {
            "name": "gcc-relwithdebinfo",
            "displayName": "GCC RelWithDebInfo TSan Build",
            "inherits": [
                "_root-config",
                "_relwithdebinfo-base",
                "_gcc-base"
            ]
        },
        {
            "name": "gcc-release",
            "displayName": "GCC Release Build",
            "inherits": [
                "_root-config",
                "_release-base",
                "_gcc-base"
            ]
        },
        {
            "name": "llvm-debug",
            "displayName": "LLVM Debug Build",
            "inherits": [
                "_root-config",
                "_debug-base",
                "_llvm-base"
            ]
        },
        {
            "name": "llvm-cov-debug",
            "displayName": "LLVM Coverage Build",
            "inherits": [
                "_root-config",
                "_debug-base"
            ],
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-fprofile-instr-generate -fcoverage-mapping"
            }
        },
        {
            "name": "llvm-relwithdebinfo",
            "displayName": "LLVM RelWithDebInfo TSan Build",
            "inherits": [
                "_root-config",
                "_relwithdebinfo-base",
                "_llvm-base"
            ]
        },
        {
            "name": "llvm-release",
            "displayName": "LLVM Release Build",
            "inherits": [
                "_root-config",
                "_release-base",
                "_llvm-base"
            ]
        },
        {
            "name": "appleclang-debug",
