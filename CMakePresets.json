            "inherits": [
                "_root-config",
                "_debug-base",
                "_appleclang-base"
            ]
        },
        {
            "name": "appleclang-relwithdebinfo",
            "displayName": "AppleClang RelWithDebInfo TSan Build",
            "inherits": [
                "_root-config",
                "_relwithdebinfo-base",
                "_appleclang-base"
            ]
        },
        {
            "name": "appleclang-release",
            "displayName": "AppleClang Release Build",
            "inherits": [
                "_root-config",
                "_release-base",
                "_appleclang-base"
            ]
        },
        {
            "name": "msvc-debug",
