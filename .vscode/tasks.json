{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Fix formatting with clang-format",
            "type": "shell",
            "command": "git ls-files -z -- '*.h' '*.hpp' '*.hh' '*.hxx' '*.c' '*.cc' '*.cpp' '*.cxx' '*.cu' | xargs -0 -n1 clang-format -i -style=file",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "group": {
                "kind": "none",
                "isDefault": false
            }
        },
        {
            "label": "Run linting with clang-tidy",
            "type": "shell",
            "command": "run-clang-tidy -p build",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "group": {
                "kind": "none",
                "isDefault": false
            }
        },
        {
            "label": "Run and fix linting with clang-tidy",
            "type": "shell",
            "command": "run-clang-tidy -p build -fix",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "group": {
                "kind": "none",
                "isDefault": false
            }
        }
    ]
}
